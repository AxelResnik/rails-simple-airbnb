<h1>All our Flats</h1>
<div class="container">
  <div class="d-flex col-4">
      <% @flats.each do |flat| %>
          <div class="card-body">
            <img src="https://picsum.photos/210/180" alt="" class="card-img-top">
            <h5 class="card-title h5"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <p><i class="fas fa-user-friends"></i><%= flat.price_per_night %></p>
            <p>$<%= flat.number_of_guests %></p>
            <div class="card-body bg-light">
              <td><%= link_to 'More info', flat, class: 'card-link' %></td>
              <td><%= link_to 'Edit', edit_flat_path(flat), class: 'card-link' %></td>
              <td><%= link_to 'Remove', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-link' %></td>
            </div>
          </div>
        <% end %>

    </div>
</div>

